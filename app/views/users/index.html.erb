    <div class="col-md-3">
      <h1>User info</h1>
      <%= image_tag current_user.get_profile_image(100,100) %>
      <p>name</p>
      <%= current_user.name %>
      <p>introduction</p>
      <%= current_user.introduction %><br>
      <% if current_user == current_user %>
        <%= link_to edit_user_path(current_user.id), class: "btn btn-outline-secondary btn-block" do %>
          <i class="fas fa-user-cog"></i>
        <% end %>
      <% end %>

      <h1>New book</h1>
      <%= form_with model: @book_new do |f| %>
      <p><%= f.label :title %></p>
      <%= f.text_field :title %>
      <p><%= f.label :opinion %></p>
      <%= f.text_area :body %>
      <%= f.submit "Create Book" %>
      <% end %>
    </div>
    <div class="col-md-8 offset-md-1">
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>title</th>
            <th>opinion</th>
          </tr>
        </thead>
        <% @users.each do |user|%>
        <tbody>
          <tr>
            <td>
              <%= image_tag user.get_profile_image(50,50) %>
            </td>
            <td>
              <%= user.name %>
            </td>
            <td><%= user.introduction %></td>
            <td><%= link_to  "Show", user_path(user.id) %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
