<table class="table table-hover">
  <thead>
    <tr>
      <th></th>
      <th>title</th>
      <th>opinion</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <% users.each do |user|%>
  <tbody>
    <tr>
      <td>
        <%= image_tag user.get_profile_image(50,50) %>
      </td>
      <td>
        <%= user.name %>
      </td>
      <td><%= user.introduction %></td>
      <td class="follow_<%= user.id %>">
        <%= render 'relationships/follow', user: user %>
      </td>
      <td><%= link_to  "Show", user_path(user.id) %></td>
    </tr>
  </tbody>
  <% end %>
</table>