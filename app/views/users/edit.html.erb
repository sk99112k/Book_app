<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>User info</h1>
        <%= form_with model: @user do |f| %>
        <%= f.text_field :name, autofocus: true %>
        <p>profile image</p>
        <%= f.file_field :profile_image %>
        <p>introduction</p>
        <%=f.text_field :introduction, autofocus: true %>
        <%= f.submit "update" %>
        <% end %>
    </div>
  </div>
</div>
