<div class="container">
  <div class="row">
    <div class="col">
      <h3 class="followers">Followed User</h3>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
          </tr>
        </thead>
        <% @users.each do |user| %>
        <tbody>
          <tr>
            <td><%= image_tag user.get_profile_image(50,50) %></td>
            <td><%= user.name %></td>
            <td>
              <% if current_user =! user %>
                <% if current_user.follow? %>
                  <%= link_to "フォローする", user_relationships_path(user.id), method: :delete %>
                <% else %>
                  <%= link_to "フォローを外す", user_relationships_path(user.id), method: :post %>
                <% end %>
              <% end %>
            </td>
            <td><%= link_to "Show", user_path(user_id) %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>