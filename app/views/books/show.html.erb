<h1>User info</h1>
<%= image_tag @book.get_profile_image(100,100) %>
<p>name</p>
<%= @book.name %>
<p>introduction</p>
<%= @book.introduction %><br>
<%= link_to "edit", edit_user_path(current_user.id) %>
<h1>New Book</h1>
<%= form_with model: @book do |f| %>
<p>title</p>
<%= f.text_field :title %>
<p>opinion</p>
<%= f.text_field :body %>
<%= f.submit %>
<% end %>