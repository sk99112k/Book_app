<h1>User info</h1>
<%= image_tag @book.user.get_profile_image(100,100) %>
<p>name</p>
<%= @book.user.name %>
<p>introduction</p>
<%= @book.user.introduction %><br>
<%= link_to "edit", edit_user_path(current_user.id) %>
<h1>New Book</h1>
<%= form_with model: @book_new do |f| %>
<p>title</p>
<%= f.text_field :title %>
<p>opinion</p>
<%= f.text_field :body %>
<%= f.submit %>
<% end %>

<h1>Book detail</h1>
<table class="table">
  <thead>
    <tr>
      <td>
      <%= link_to user_path(@book.user_id) do %>
        <%= image_tag @book.user.get_profile_image(50,50) %>
      <% end %><br>
      <%= link_to user_path(@book.user_id) do %>
        <%= @book.user.name %>
      <% end %>
      </td>
      <td>
      <%= link_to book_path(@book) do %>
        <%= @book.title %>
      <% end %>
      </td>
      <td>
      <%= @book.body %>
      </td>
    </tr>
  </thead>
</table>
