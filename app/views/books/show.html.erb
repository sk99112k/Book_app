<div class="container">
  <div class="row">
    <div class="col-6 col-md-4">
      <div class="flash">
        <%= flash[:notice] %>
        <%= flash[:success] %>
      </div>
      <div class="error">
        <% if @book_new.errors.any? %>
          <%= @book_new.errors.count %>errors
          <ul>
            <% @book_new.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
      </div>

      <h1>User info</h1>
      <%= image_tag @book.user.get_profile_image(100,100) %>
      <p>name</p>
      <%= @book.user.name %>
      <p>introduction</p>
      <%= @book.user.introduction %><br>
      <% if @book.user == current_user %>
      <p><%= link_to "edit", edit_user_path(current_user.id) %></p>
      <% end %>

      <h1>New Book</h1>
      <%= form_with model: @book_new do |f| %>
      <p>title</p>
      <%= f.text_field :title %>
      <p>opinion</p>
      <%= f.text_field :body %>
      <%= f.submit %>
      <% end %>
    </div>

    <div class="col-md-8">
      <h1>Book detail</h1>
      <table class="table">
        <thead>
          <tr>
            <td>
              <%= link_to user_path(@book.user_id) do %>
                <%= image_tag @book.user.get_profile_image(50,50) %>
              <% end %><br>
              <%= link_to user_path(@book.user_id) do %>
                <%= @book.user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@book) do %>
                <%= @book.title %>
              <% end %>
            </td>
            <td>
              <%= @book.body %>
            </td>
            <% if @book.user == current_user %>
            <td>
              <%= link_to "edit", edit_book_path(@book.id) %>
            </td>
            <td>
              <%= link_to "destroy", book_path(@book.id), method: :delete %>
            </td>
            <% end %>
          </tr>
        </thead>
      </table>
    </div>
  </div>
</div>
