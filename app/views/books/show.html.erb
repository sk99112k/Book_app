<div class="container">
  <div class="row">
    <div class="col-md-3">
      <div class="flash">
        <%= flash[:notice] %>
        <%= flash[:success] %>
      </div>
      <div class="error">
        <%= render 'books/error', book_new: @book_new %>
      </div>

      <h1>User info</h1>
      <%= image_tag @book.user.get_profile_image(100,100) %>
      <p>name</p>
      <%= @book.user.name %>
      <p>introduction</p>
      <%= @book.user.introduction %><br>
        <%= link_to edit_user_path(@book.user.id), class: "btn btn-outline-secondary btn-block" do %>
          <i class="fas fa-user-cog"></i>
        <% end %>

      <h1>New book</h1>
      <%= form_with model: @book_new do |f| %>
      <p><%= f.label :title %></p>
      <%= f.text_field :title %>
      <p><%= f.label :opinion %></p>
      <%= f.text_area :body %>
      <%= f.submit %>
      <% end %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h1>Book detail</h1>
      <table class="table">
        <thead>
          <tr>
            <td>
              <%= link_to user_path(@book.user_id) do %>
                <%= image_tag @book.user.get_profile_image(50,50) %>
              <% end %><br>
              <%= link_to user_path(@book.user_id) do %>
                <%= @book.user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@book) do %>
                <%= @book.title %>
              <% end %>
            </td>
            <td>
              <%= @book.body %>
            </td>
            <% if @book.user == current_user %>
            <td>
              <%= link_to "Edit", edit_book_path(@book.id) %>
            </td>
            <td>
              <%= link_to "Destroy", book_path(@book.id), method: :delete %>
            </td>
            <% end %>
          </tr>
        </thead>
      </table>
    </div>
  </div>
</div>
