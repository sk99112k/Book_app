<div class="container">
  <div class="row">
    <div class="col-md-3">
      <div class="flash">
        <%= flash[:notice] %>
        <%= flash[:success] %>
      </div>
      <div class="error">
        <%= render 'books/error', book_new: @book_new %>
      </div>

      <h1>User info</h1>
      <%= render 'users/info', user: @book.user %>

      <h1>New book</h1>
      <%= render 'books/form', book_new: @book_new %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h1>Book detail</h1>
      <table class="table">
        <thead>
          <tr>
            <td>
              <%= link_to user_path(@book.user_id) do %>
                <%= image_tag @book.user.get_profile_image(50,50) %>
              <% end %><br>
              <%= link_to user_path(@book.user_id) do %>
                <%= @book.user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@book) do %>
                <%= @book.title %>
              <% end %>
            </td>
            <td>
              <%= @book.body %>
            </td>
            <td id="favorite_button_<%= @book.id %>">
              <%= render 'favorites/favorite', book: @book %>
            </td>
            <td>
              コメント件数 : <%= @book.comments.count %>
            </td>
            <% if @book.user == current_user %>
            <td>
              <%= link_to "Edit", edit_book_path(@book.id) %>
            </td>
            <td>
              <%= link_to "Destroy", book_path(@book.id), method: :delete %>
            </td>
            <% end %>
          </tr>
        </thead>
      </table>
      <table class="table comment">
        <% @book.comments.each do |comment| %>
        <tr>
          <td>
            <%= image_tag comment.user.get_profile_image(40,40) %><br>
            <%= comment.user.name %>
          </td>
          <td><%= comment.comment%></td>
          <td>
            <% if current_user == comment.user %>
              <%= link_to "Destroy", book_comment_path(comment.book,comment), method: :delete %>
            <% end %>
          </td>
        </tr>
        <% end %>
      </table>
      <div class="comment_form">
        <%= form_with model: [@book, @comment] do |f| %>
          <%= f.text_area :comment, rows:"3" %><br>
          <%= f.submit %>
        <% end %>
      </div>
    </div>
  </div>
</div>
