<div class="container">
  <div class="row">
    <div class="col-mt-15 col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

      <div class="error">
        <% if @book.errors.any? %>
          <%= @book.errors.count %>errors
          <ul>
            <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
      </div>

      <h1>Editing Book</h1>
      <%= form_with model: @book do |f| %>
      <p>title</p>
      <%= f.text_field :title, autofocus:true %>
      <p>opinion</p>
      <%= f.text_area :body, autofocus:true %><br>
      <%= f.submit "Update Book" %>
      <% end %>
      <p><%= link_to "Back", books_path %> | <%= link_to "Show", book_path(@book.id) %></p>
    </div>
  </div>
</div>

