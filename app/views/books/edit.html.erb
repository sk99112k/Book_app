<div class="container">
  <div class="row">
    <div class="col-mt-15 col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <%= form_with model: @book do |f| %>
      <p>title</p>
      <%= f.text_field :title, autofocus:true %>
      <p>opinion</p>
      <%= f.text_field :body, autofocus:true %><br>
      <%= f.submit "update" %>
      <% end %>
      <p><%= link_to "back", books_path %> | <%= link_to "show", book_path(current_user.id) %></p>
    </div>
  </div>
</div>

