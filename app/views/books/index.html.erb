<div class="container">
  <div class="row">
    <div class="col-md-3">
      <div class="flash">
        <%= flash[:notice] %>
        <%= flash[:success] %>
      </div>
      <div class="error">
        <%= render 'books/error', book_new: @book_new %>
      </div>

      <h1>User info</h1>
      <%= render 'users/info', user: current_user %>

      <h1>New book</h1>
      <%= render 'books/form', book_new: @book_new %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h1>books</h1>
      <%= render 'books/index', books: @books %>
    </div>
  </div>
</div>
